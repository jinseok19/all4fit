{
  "name": "all4fit",
  "version": "1.0.0",
  "description": "모두의핏 - 체육시설 통합 플랫폼",
  "main": "index.html",
  "scripts": {
    "start": "python3 -m http.server 8000",
    "deploy": "./scripts/deploy.sh",
    "deploy:dev": "./scripts/deploy-dev.sh",
    "backup": "./scripts/backup.sh",
    "monitor": "./scripts/monitor.sh",
    "ssl": "./scripts/setup-ssl.sh",
    "pm2:setup": "./scripts/setup-pm2.sh",
    "pm2:commands": "./scripts/pm2-commands.sh",
    "status": "systemctl status nginx",
    "restart": "sudo systemctl restart nginx",
    "logs": "tail -f /var/log/nginx/access.log",
    "logs:prod": "tail -f /var/log/nginx/all4fit_prod_access.log",
    "logs:dev": "tail -f /var/log/nginx/all4fit_dev_access.log",
    "error-logs": "tail -f /var/log/nginx/error.log",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs",
    "pm2:restart": "pm2 restart all",
    "pm2:reload": "pm2 reload all",
    "pm2:stop": "pm2 stop all",
    "pm2:monit": "pm2 monit",
    "deploy:zero": "./scripts/deploy-zero-downtime.sh"
  },
  "keywords": [
    "fitness",
    "sports",
    "facility",
    "korea",
    "체육시설",
    "운동"
  ],
  "author": "NEXUSCORE",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/all4fit.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/all4fit/issues"
  },
  "homepage": "https://your-domain.com"
}
